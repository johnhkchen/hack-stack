---
export interface Props {
  title: string;
  subtitle?: string;
  currentPage: 'home' | 'debug';
}

const { title, subtitle, currentPage } = Astro.props;
---

<header class="main-header">
  <nav class="main-nav">
    <div class="nav-brand">
      <h1>{title}</h1>
      {subtitle && <p class="nav-subtitle">{subtitle}</p>}
    </div>
    <div class="nav-links">
      {currentPage === 'debug' ? (
        <a href="/" class="nav-link">Demo</a>
      ) : (
        <a href="/debug" class="nav-link">Debug</a>
      )}
    </div>
  </nav>
</header>

<style>
  .main-header {
    background: var(--pico-primary-background);
    color: var(--pico-primary-inverse);
    margin-bottom: 2rem;
  }

  .main-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 0;
  }

  .nav-brand h1 {
    margin: 0;
    color: var(--pico-primary-inverse);
  }

  .nav-subtitle {
    margin: 0.5rem 0 0 0;
    color: var(--pico-primary-inverse);
    opacity: 0.9;
  }

  .nav-link {
    color: var(--pico-primary-inverse);
    text-decoration: none;
    padding: 0.5rem 1rem;
    border: 1px solid var(--pico-primary-inverse);
    border-radius: var(--pico-border-radius);
    transition: all 0.2s ease;
  }

  .nav-link:hover {
    background: var(--pico-primary-inverse);
    color: var(--pico-primary);
    text-decoration: none;
  }

  @media (max-width: 768px) {
    .main-nav {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
  }
</style>